{
  "name": "voice_control",
  "modules": [
    "//apps/ev3/voice_control:voice_control_goal_generator",
    "@com_nvidia_isaac//packages/planner"
  ],
  "config_files": ["apps/ev3/voice_control/model/isaac_vcd_model.metadata.json"],
  "config": {
    "odometry.odometry": {
      "DifferentialBaseWheelImuOdometry": {
        "use_imu": false
      }
    },
    "commander.robot_remote": {
      "isaac.navigation.RobotRemoteControl": {
        "angular_speed_max": 0.6,
        "linear_speed_max": 0.3
      }
    },
    "websight": {
      "WebsightServer": {
        "webroot": "external/com_nvidia_isaac/packages/sight/webroot",
        "ui_config": {
          "windows": {
            "Voice Command Detection": {
              "renderer": "plot",
              "dims": {
                "width": 400,
                "height": 200
              },
              "channels": [
                {
                  "name": "voice_control/voice_detection.voice_command_detector/isaac.audio.VoiceCommandConstruction/voice_command_id",
                  "active": true
                }
              ]
            },
            "Ev3 - Local View": {
                "renderer": "2d",
                "dims": {
                  "width": 256,
                  "height": 256
                },
                "zoom": 4.0,
                "channels": [
                  {
                    "name": "voice_control/local_map.local_map/isaac.navigation.LocalMap/local_map"
                  }
                ]
              },              
              "Ev3 - Odometry": {
                "renderer": "plot",
                "channels": [
                  {
                    "name": "voice_control/odometry.odometry/DifferentialBaseWheelImuOdometry/state.heading"
                  },
                  {
                    "name": "voice_control/odometry.odometry/DifferentialBaseWheelImuOdometry/state.pos_x"
                  },
                  {
                    "name": "voice_control/odometry.odometry/DifferentialBaseWheelImuOdometry/state.pos_y"
                  }
                ]
            }
          }
        }
      }
    },
    "shared_robot_model": {
      "DifferentialBaseModel": {
        "robot_radius": 0.5,
        "base_length": 0.38,
        "wheel_radius": 0.125
      }
    },
    "navigation_mode": {
      "isaac.navigation.GroupSelectorBehavior": {
        "behavior_map": {
          "navigate": [
          ],
          "stop": [
          ]
        },
        "desired_behavior": "navigate",
        "tick_period": "50ms"
      }
    }
  },  
  "graph": {
    "nodes": [
      {
        "name": "obstacle_atlas",
        "components": [
          {
            "name": "obstacle_atlas",
            "type": "isaac::map::ObstacleAtlas"
          }
        ]
       },
       {
        "name": "navigation_mode",
        "components": [
          {
            "name": "isaac.navigation.GroupSelectorBehavior",
            "type": "isaac::navigation::GroupSelectorBehavior"
          },
          {
            "name": "isaac.alice.Behavior",
            "type": "isaac::alice::Behavior"
          }
        ]
      },
      {
        "name": "shared_robot_model",
        "components": [
          {
            "name": "DifferentialBaseModel",
            "type": "isaac::planner::DifferentialBaseModel"
          },
          {
            "name": "SphericalRobotShapeComponent",
            "type": "isaac::planner::SphericalRobotShapeComponent"
          }
        ]
      },
      {
        "name": "voice_control_component",
        "components": [
          {
            "name": "message_ledger",
            "type": "isaac::alice::MessageLedger"
          },
          {
            "name": "goal_generator",
            "type": "isaac::VoiceControlGoalGenerator"
          }
        ]
      },
      {
        "name": "voice_detection",
        "subgraph": "apps/ev3/voice_control/voice_command_detection.subgraph.json"
      },
      {
        "name": "2d_ev3",
        "subgraph": "apps/ev3/2d_ev3.subgraph.json"
      },
      {
        "name": "commander",
        "subgraph": "@com_nvidia_isaac//packages/navigation/apps/differential_base_commander.subgraph.json"
      },
      {
        "name": "odometry",
        "subgraph": "@com_nvidia_isaac//packages/navigation/apps/differential_base_imu_odometry.subgraph.json"
      },
      {
        "name": "local_map",
        "subgraph": "@com_nvidia_isaac//packages/navigation/apps/local_map.subgraph.json"
      },
      {
        "name": "go_to",
        "subgraph": "@com_nvidia_isaac//packages/navigation/apps/go_to.subgraph.json"
      }
    ],
    "edges": [
      {
        "source": "voice_detection.subgraph/interface/voice_command_id",
        "target": "voice_control_component/goal_generator/voice_command_id"
      },
      {
        "source": "commander.subgraph/interface/command",
        "target": "2d_ev3.subgraph/interface/base_command"
      },
      {
        "source": "2d_ev3.subgraph/interface/base_state",
        "target": "odometry.subgraph/interface/state"
      },
      {
        "source": "2d_ev3.subgraph/interface/flatscan",
        "target": "local_map.subgraph/interface/flatscan"
      },
      {
        "source": "odometry.subgraph/interface/odometry",
        "target": "go_to.subgraph/interface/odometry"
      },
      {
        "source": "voice_control_component/goal_generator/goal",
        "target": "go_to.subgraph/interface/goal"
      }
    ]
  }
}
